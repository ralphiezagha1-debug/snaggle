rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Waitlist collection is write-only. No reads allowed.
    match /waitlist/{docId} {
      allow write: if true;
      allow read: if false;
    }

    // Default: deny all other reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}