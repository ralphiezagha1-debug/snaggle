// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ✅ Public waitlist collection
    match /waitlist/{docId} {
      // Anyone can add a new document
      allow create: if true;
      // No one can read or modify existing docs
      allow read, update, delete: if false;
    }

    // ❌ Default: everything else is blocked unless explicitly allowed
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
