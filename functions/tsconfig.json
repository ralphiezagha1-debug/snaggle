{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "rootDir": "src",
    "outDir": "lib",
    "strict": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}